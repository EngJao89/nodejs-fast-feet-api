generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  ssn      String   @unique
  password String

  Recipient Recipient[]

  @@map("users")
}

model Recipient {
  id        String  @id @default(uuid())
  userId    String
  name      String
  state     String
  city      String
  street    String
  number    String
  zipCode   String  @map("zip_code")
  latitude  Decimal
  longitude Decimal

  user User @relation(fields: [userId], references: [id])

  @@map("recipients")
}